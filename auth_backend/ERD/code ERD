Table users {
  id integer [primary key]
  full_name varchar
  email varchar
  password varchar
  created_at datetime
}

Table products {
  id integer [primary key]
  name varchar
  price int
  status varchar
  created_at datetime
  category_id int [ref: > categories.id]
  user_id integer [ref: > users.id]
}

Table categories {
  id integer [primary key]
  name varchar
  code varchar
}

Table orders {
  id integer [primary key]
  user_id integer [ref: > users.id]
  status varchar
  created_at datetime
}

Ref: products.category_id > categories.id
Ref: products.user_id > users.id
Ref: orders.user_id > users.id


//Penjelasan relasi ERD
products.category_id > categories.id: Setiap produk terhubung dengan satu kategori berdasarkan category_id.
products.user_id > users.id: Setiap produk terhubung dengan pengguna yang membuatnya berdasarkan user_id.
orders.user_id > users.id: Setiap pesanan terhubung dengan pengguna yang melakukan pesanan berdasarkan user_id.
